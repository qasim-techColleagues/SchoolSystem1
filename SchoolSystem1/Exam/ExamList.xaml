<Page x:Class="SchoolSystem1.Exam.ExamList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:SchoolSystem1.Exam"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="ExamList">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="Header"
              Grid.Row="0"
              Background="Blue">
            <StackPanel Orientation="Vertical">
                <Label Content="EXAM LIST"
                       FontSize="20"
                       Foreground="White"
                       Width="788"
                       HorizontalContentAlignment="Center" />
            </StackPanel>
        </Grid>
        <Grid x:Name="Menu"
              Grid.Row="1"
              Background="Gray">
            <StackPanel Orientation="Horizontal">
            <Button Height="40"
                    Width="150"
                    Content="Add Marks"
                    Name="btnExamAdd"
                    Click="btnExamAdd_Click"
                    />
            
                     
            <Button Content="Delete"
                    HorizontalAlignment="Left"
                    Click="btnDeleteExam_Click"
                        Height="40"
                        Width="150" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="2">
            <DataGrid x:Name="dgExams"
                      ItemsSource="{Binding Exams}"
                      Background="LightGray"
                      IsReadOnly="True"
                      MouseDoubleClick="dgExams_MouseDoubleClick"></DataGrid>
        </Grid>
    </Grid>
</Page>
